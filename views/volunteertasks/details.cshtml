@model DisasterAlleviationFoundation.Models.VolunteerTask
@{
    ViewData["Title"] = "Task Details";
}

<section class="container my-4">
    <h1 class="h4 mb-3">@Model.Title</h1>
    <div class="card card-donation p-4">
        <dl class="row mb-0">
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
            <dt class="col-sm-3">Start</dt>
            <dd class="col-sm-9">@Model.StartAt?.ToString("yyyy-MM-dd HH:mm")</dd>
            <dt class="col-sm-3">End</dt>
            <dd class="col-sm-9">@Model.EndAt?.ToString("yyyy-MM-dd HH:mm")</dd>
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
            <dt class="col-sm-3">Assigned Volunteer Id</dt>
            <dd class="col-sm-9">@Model.AssignedVolunteerId</dd>
            <dt class="col-sm-3">Notes</dt>
            <dd class="col-sm-9">@Model.Notes</dd>
        </dl>
        <div class="mt-3 d-flex gap-2">
            <a class="btn btn-outline-primary rounded-pill" href="@Url.Action("Edit", new { id = Model.Id })">Edit</a>
            <a class="btn btn-outline-secondary rounded-pill" href="@Url.Action("Index")">Back</a>
        </div>
    </div>
</section>


