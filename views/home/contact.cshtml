@{
    ViewData["Title"] = "Contact";
}

<section class="contact-hero text-center py-5">
    <div class="container">
        <div class="overline text-uppercase">Contact us</div>
        <h1 class="display-6 fw-bold">Get in touch today</h1>
        <p class="text-muted mx-auto" style="max-width:56ch;">We’re here to answer your questions, hear your suggestions, and explore ways we can make a difference together.</p>
    </div>
</section>

<section class="container contact-cards">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card contact-card text-center h-100">
                <div class="card-body">
                    <div class="contact-icon"><i class="bi bi-coin"></i></div>
                    <h3 class="h6 fw-bold">Donations</h3>
                    <p class="small text-muted">Your support helps us fund our programs and reach communities in need. For questions about donations or to make a contribution, contact:
</p>
                    <div class="small fw-semibold">donations@giftofthegivers.com</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card contact-card text-center h-100">
                <div class="card-body">
                    <div class="contact-icon"><i class="bi bi-people"></i></div>
                    <h3 class="h6 fw-bold">Partnerships</h3>
                    <p class="small text-muted">We welcome partnerships with organizations that share our mission. To discuss collaboration opportunities, contact:</p>
                    <div class="small fw-semibold">partnerships@giftofthegivers.com</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card contact-card text-center h-100">
                <div class="card-body">
                    <div class="contact-icon"><i class="bi bi-journal-text"></i></div>
                    <h3 class="h6 fw-bold">Press</h3>
                    <p class="small text-muted">For media inquiries, interviews, or press materials, contact:</p>
                    <div class="small fw-semibold">press@giftofthegivers.com</div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-form-section py-5 full-bleed" style="background:#FFF8F2;">
    <div class="container">
        <div class="row g-5 align-items-start">
            <div class="col-lg-5">
                <h2 class="h4 fw-bold">Send us a message</h2>
                <p class="text-muted">Have a question or message for our team? Fill out the form below and we’ll get back to you promptly.</p>
                <div class="mt-3">
                    <div class="fw-semibold mb-2">Follow us on social media</div>
                    <div class="d-flex gap-2">
                        <a class="btn btn-social-icon" href="#" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                        <a class="btn btn-social-icon" href="#" aria-label="Twitter"><i class="bi bi-twitter-x"></i></a>
                        <a class="btn btn-social-icon" href="#" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                        <a class="btn btn-social-icon" href="#" aria-label="LinkedIn"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="card card-elevated p-4">
                    <form class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label small">Name</label>
                            <input type="text" class="form-control contact-input" placeholder="John Carter" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small">Email</label>
                            <input type="email" class="form-control contact-input" placeholder="example@email.com" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small">Phone</label>
                            <input type="text" class="form-control contact-input" placeholder="(+27) 076 259 6123" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small">Subject</label>
                            <input type="text" class="form-control contact-input" placeholder="e.g. Donation" />
                        </div>
                        <div class="col-12">
                            <label class="form-label small">Message</label>
                            <textarea class="form-control contact-input" rows="4" placeholder="Please type your message here..."></textarea>
                        </div>
                        <div class="col-12">
                            <button type="button" class="btn btn-orange rounded-pill px-4">Submit Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container py-5">
    <h2 class="h5 text-center fw-bold mb-2">Frequently Asked Questions</h2>
    <div class="heading-divider mx-auto mb-4"></div>
    <div class="faq-bg"></div>
    <div class="row justify-content-center g-4 position-relative">
        <div class="col-lg-8">
            <div class="card card-elevated p-3 mb-3">
                <div class="d-flex align-items-start gap-3">
                    <div class="faq-plus">+</div>
                    <div>
                        <div class="fw-semibold">How does your charity work?</div>
                        <div class="small text-muted">We focus on providing sustainable solutions for communities in need, including education, healthcare, and disaster relief programs. Our projects are carefully planned to maximize impact and ensure long-term benefits.</div>
                    </div>
                </div>
            </div>
            <div class="card card-elevated p-3 mb-3">
                <div class="d-flex align-items-start gap-3">
                    <div class="faq-plus">+</div>
                    <div>
                        <div class="fw-semibold">How do you choose which communities to help?</div>
                        <div class="small text-muted">We prioritize communities based on need, vulnerability, and the potential for lasting impact. Our team conducts research and collaborates with local partners to identify areas where our support can make the biggest difference.</div>
                    </div>
                </div>
            </div>
            <div class="card card-elevated p-3 mb-3">
                <div class="d-flex align-items-start gap-3">
                    <div class="faq-plus">+</div>
                    <div>
                        <div class="fw-semibold">How can our company contact?</div>
                        <div class="small text-muted">Companies can support our work through sponsorships, employee volunteer programs, or corporate donations. Reach out to partnerships@giftofthegivers.com
 to explore options.</div>
                    </div>
                </div>
            </div>
            <div class="card card-elevated p-3">
                <div class="d-flex align-items-start gap-3">
                    <div class="faq-plus">+</div>
                    <div>
                        <div class="fw-semibold">How does your charity work?</div>
                        <div class="small text-muted">We accept financial contributions, in-kind donations such as supplies and equipment, and volunteer time. Each donation helps us continue our mission to serve those in need.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


