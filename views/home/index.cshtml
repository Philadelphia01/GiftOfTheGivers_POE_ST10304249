@{
    ViewData["Title"] = "Home";
}

@{
    ViewData["BodyClass"] = ((ViewData["BodyClass"] as string) ?? string.Empty) + " home-no-top-padding";
}
<!-- Hero Section (revamped) -->
<section class="hero-landing">
    <div class="container-fluid px-0">
        <div class="row align-items-center g-5 mx-0">
            <div class="col-lg-6">
                <h1 class="display-4 title mb-3">Let’s Ensure A Better Future For Homeless Kids</h1>
                <p class="lead subtext mb-4">Every day, thousands of children face life without a safe home. Join us in providing shelter, education, and care to give them the future they deserve.</p>
                <a href="@Url.Action("Create","Donation")" class="btn btn-donate btn-lg rounded-pill">Donate</a>
            </div>
            <div class="col-lg-6">
                <div class="hero-graphic">
                    <span class="ring"></span>
                    <span class="ring ring-2"></span>
                    <span class="ring ring-3"></span>
                    <span class="dot dot-a"></span>
                    <span class="dot dot-b"></span>
                    <div class="photo">
                        <img src="~/images/ff.jpg" asp-append-version="true" alt="Smiling kids" style="width:100%;height:100%;object-fit:cover;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Mission Statement -->
<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 text-center">
            <p class="lead mb-0">At Disaster Alleviation Foundation, we are committed to uplifting underprivileged communities through sustainable support, education, and healthcare initiatives. Every donation creates hope and opportunity.</p>
        </div>
    </div>
    
</section>

<!-- Impact Highlights -->
<section class="container my-5">
    <div class="row g-4 text-center">
        <div class="col-md-4">
            <div class="card card-donation p-4 h-100">
                <div class="impact-icon mb-2"><i class="bi bi-mortarboard"></i></div>
                <h3 class="h6 mb-1">500+ children educated</h3>
                <p class="text-muted small mb-0">Scholarships and learning support</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-donation p-4 h-100">
                <div class="impact-icon mb-2"><i class="bi bi-bag-heart"></i></div>
                <h3 class="h6 mb-1">10,000 meals served</h3>
                <p class="text-muted small mb-0">Food parcels and meal programs</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-donation p-4 h-100">
                <div class="impact-icon mb-2"><i class="bi bi-heart-pulse"></i></div>
                <h3 class="h6 mb-1">300 families supported</h3>
                <p class="text-muted small mb-0">Access to healthcare and essentials</p>
            </div>
        </div>
    </div>
</section>

<!-- Featured Programs -->
<section class="container my-5">
    <h2 class="h4 text-center mb-2">Featured Programs</h2>
    <div class="heading-divider mx-auto"></div>
    <div class="row g-4 mt-2">
        <div class="col-md-4">
            <div class="card card-donation h-100">
                <img src="~/images/ff.jpg" asp-append-version="true" class="card-img-top" alt="Food Security Program" />
                <div class="card-body">
                    <h3 class="h6">Food Security Program</h3>
                    <p class="small">Providing daily meals for hungry families.</p>
                    <a class="btn btn-card-action rounded-pill" href="@Url.Action("FoodSecurity","Programs")">Learn more</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-donation h-100">
                <img src="~/images/education for ll.jpg" asp-append-version="true" class="card-img-top" alt="Education for All" />
                <div class="card-body">
                    <h3 class="h6">Education for All</h3>
                    <p class="small">Scholarships and resources for children.</p>
                    <a class="btn btn-card-action rounded-pill" href="@Url.Action("Education","Programs")">Learn more</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-donation h-100">
                <img src="~/images/healthcare support.jpg" asp-append-version="true" class="card-img-top" alt="Healthcare Support" />
                <div class="card-body">
                    <h3 class="h6">Healthcare Support</h3>
                    <p class="small">Basic healthcare and medical supplies.</p>
                    <a class="btn btn-card-action rounded-pill" href="@Url.Action("Healthcare","Programs")">Read their stories</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials -->
<section class="container my-5">
    <h2 class="h4 text-center mb-2">What people say</h2>
    <div class="heading-divider mx-auto mb-4"></div>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="testimonial p-4 h-100">
                <figure class="mb-0">
                    <blockquote class="blockquote"><p>“Because of this foundation, I can now go to school every day without worrying about hunger.”</p></blockquote>
                    <figcaption class="blockquote-footer mb-0" style="color:#f08b1d;">Amina, 12 years old</figcaption>
                </figure>
            </div>
        </div>
        <div class="col-md-4">
            <div class="testimonial p-4 h-100">
                <figure class="mb-0">
                    <blockquote class="blockquote"><p>“Our clinic day brought medicine and care to our whole street.”</p></blockquote>
                    <figcaption class="blockquote-footer mb-0" style="color:#f08b1d;">Sipho, Khayelitsha</figcaption>
                </figure>
            </div>
        </div>
        <div class="col-md-4">
            <div class="testimonial p-4 h-100">
                <figure class="mb-0">
                    <blockquote class="blockquote"><p>“The food parcels carried us through the toughest weeks. Thank you.”</p></blockquote>
                    <figcaption class="blockquote-footer mb-0" style="color:#f08b1d;">Thandi, Pietermaritzburg</figcaption>
                </figure>
            </div>
        </div>
    </div>
</section>


