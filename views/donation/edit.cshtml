@model DisasterAlleviationFoundation.Models.Donation

@{
    ViewData["Title"] = "Edit Donation";
}

<div class="container my-4">
    <h1 class="h3 mb-3">Edit Donation</h1>
    <div class="card card-donation p-4">
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="ResourceType" class="form-label"></label>
        <input asp-for="ResourceType" class="form-control" />
        <span asp-validation-for="ResourceType" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" type="number" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DateDonated" class="form-label"></label>
        <input asp-for="DateDonated" class="form-control" type="datetime-local" value="@Model.DateDonated.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="DateDonated" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Note" class="form-label"></label>
        <textarea asp-for="Note" class="form-control"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary rounded-pill">Save Changes</button>
    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

    </div>
</div>
