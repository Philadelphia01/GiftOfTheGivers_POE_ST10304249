@model DisasterAlleviationFoundation.Models.Donation

@{
    ViewData["Title"] = "Delete Donation";
}

<div class="container my-4">
    <h1 class="h3 mb-3">Delete Donation</h1>
    <div class="card card-donation p-4">
        <h3 class="h5">Are you sure you want to delete this donation?</h3>
        <div class="row g-3 mt-2">
            <div class="col-md-6"><strong>Resource Type:</strong> @Model.ResourceType</div>
            <div class="col-md-6"><strong>Quantity:</strong> @Model.Quantity</div>
            <div class="col-md-6"><strong>Date Donated:</strong> @Model.DateDonated.ToLocalTime().ToString("f")</div>
            <div class="col-12"><strong>Note:</strong><p class="mb-0">@Model.Note</p></div>
        </div>
        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger rounded-pill">Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Cancel</a>
        </form>
    </div>
</div>
