@{
    ViewData["Title"] = "Direct Database Test";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3>Direct Database Test</h3>
                </div>
                <div class="card-body">
                    <div class="alert @(ViewBag.Message.ToString().Contains("successfully") ? "alert-success" : "alert-danger")">
                        <strong>Result:</strong> @ViewBag.Message
                    </div>
                    <div class="mt-3">
                        <a href="/Donation" class="btn btn-primary">View All Donations</a>
                        <a href="/Test" class="btn btn-secondary">Database Test Page</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
