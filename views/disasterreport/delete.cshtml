@model DisasterAlleviationFoundation.Models.DisasterReport

@{
    ViewData["Title"] = "Delete Disaster Report";
}

<div class="container my-4">
    <h1 class="h3 mb-3">Delete Disaster Report</h1>
    <div class="card card-donation p-4">
        <h3 class="h5">Are you sure you want to delete this report?</h3>
        <div class="row g-3 mt-2">
            <div class="col-md-6"><strong>Location:</strong> @Model.Location</div>
            <div class="col-md-6"><strong>Disaster Type:</strong> @Model.DisasterType</div>
            <div class="col-md-6"><strong>Date Reported:</strong> @Model.DateReported.ToLocalTime().ToString("f")</div>
            <div class="col-12"><strong>Description:</strong><p class="mb-0">@Model.Description</p></div>
        </div>
        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger rounded-pill">Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Cancel</a>
        </form>
    </div>
</div>
