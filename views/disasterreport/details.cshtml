@model DisasterAlleviationFoundation.Models.DisasterReport

@{
    ViewData["Title"] = "Disaster Report Details";
}

<div class="container my-4">
    <h1 class="h3 mb-3">Disaster Report Details</h1>
    <div class="card card-donation p-4">
        <div class="row g-3">
            <div class="col-md-6"><strong>Location:</strong> @Model.Location</div>
            <div class="col-md-6"><strong>Disaster Type:</strong> <span class="badge text-bg-info">@Model.DisasterType</span></div>
            <div class="col-md-6"><strong>Date Reported:</strong> @Model.DateReported.ToLocalTime().ToString("f")</div>
            <div class="col-md-6"><strong>Reported By:</strong> @Model.ReportedByUser?.FullName ?? Model.ReportedByUserId</div>
            <div class="col-12">
                <strong>Description:</strong>
                <p class="mb-0">@Model.Description</p>
            </div>
        </div>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Back to List</a>
        </div>
    </div>
</div>
