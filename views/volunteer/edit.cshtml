@model DisasterAlleviationFoundation.Models.Volunteer

@{
    ViewData["Title"] = "Edit Volunteer Task";
}

<div class="container my-4">
    <h1 class="h3 mb-3">Edit Volunteer Task</h1>
    <div class="card card-donation p-4">
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Task" class="form-label"></label>
        <input asp-for="Task" class="form-control" />
        <span asp-validation-for="Task" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ScheduledDate" class="form-label"></label>
        <input asp-for="ScheduledDate" class="form-control" type="datetime-local" value="@Model.ScheduledDate.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="ScheduledDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3 form-check">
        <input asp-for="IsCompleted" class="form-check-input" />
        <label asp-for="IsCompleted" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary rounded-pill">Save Changes</button>
    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

    </div>
</div>
