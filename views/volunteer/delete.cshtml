@model DisasterAlleviationFoundation.Models.Volunteer

@{
    ViewData["Title"] = "Delete Volunteer Task";
}

<div class="container my-4">
    <h1 class="h3 mb-3">Delete Volunteer Task</h1>
    <div class="card card-donation p-4">
        <h3 class="h5">Are you sure you want to delete this task?</h3>
        <div class="row g-3 mt-2">
            <div class="col-md-6"><strong>Task:</strong> @Model.Task</div>
            <div class="col-md-6"><strong>Scheduled Date:</strong> @Model.ScheduledDate.ToLocalTime().ToString("f")</div>
            <div class="col-md-6"><strong>Status:</strong> @(Model.IsCompleted ? "Completed" : "Pending")</div>
        </div>
        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger rounded-pill">Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Cancel</a>
        </form>
    </div>
</div>
