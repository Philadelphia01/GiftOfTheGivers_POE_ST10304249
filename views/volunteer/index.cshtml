@model IEnumerable<DisasterAlleviationFoundation.Models.Volunteer>

@{
    ViewData["Title"] = "Volunteer Tasks";
}

<div class="container my-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 m-0">Volunteer Tasks</h1>
        <a asp-action="Create" class="btn btn-primary rounded-pill">Add Volunteer Task</a>
    </div>
    <div class="card card-donation p-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Task</th>
                        <th>Scheduled Date</th>
                        <th>Status</th>
                        <th>Volunteer</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
@foreach (var volunteer in Model)
{
                    <tr>
                        <td>@volunteer.Task</td>
                        <td>@volunteer.ScheduledDate.ToLocalTime().ToString("g")</td>
                        <td>
                            @if (volunteer.IsCompleted)
                            {
                                <span class="badge text-bg-success">Completed</span>
                            }
                            else
                            {
                                <span class="badge text-bg-warning">Pending</span>
                            }
                        </td>
                        <td>You</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@volunteer.Id" class="btn btn-outline-info btn-sm rounded-pill">Details</a>
@if (User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == volunteer.VolunteerUserId)
{
                            <a asp-action="Edit" asp-route-id="@volunteer.Id" class="btn btn-outline-warning btn-sm rounded-pill ms-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@volunteer.Id" class="btn btn-outline-danger btn-sm rounded-pill ms-1">Delete</a>
}
                        </td>
                    </tr>
}
                </tbody>
            </table>
        </div>
    </div>
</div>
